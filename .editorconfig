# EditorConfig pour le monorepo

root = true

# Fichiers généraux
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

# Fichiers JavaScript / TypeScript
[*.{js,jsx,ts,tsx,mjs,mts,cts}]
quote_type = single
quote_properties = as-needed
semi = true

# Fichiers JSON
[*.json]
indent_style = space
indent_size = 4

# Fichiers CSS / SCSS / Tailwind
[*.{css,scss,sass,pcss}]
indent_style = space
indent_size = 4

# Fichiers HTML / JSX
[*.{html,htm,jsx,tsx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# Exclusions pour dossiers générés
[**/node_modules/**]
indent_style = unset

[**/dist/**]
indent_style = unset

[**/build/**]
indent_style = unset

[**/coverage/**]
indent_style = unset

[**/.turbo/**]
indent_style = unset

[**/.nx/**]
indent_style = unset

[**/.pnpm-store/**]
indent_style = unset

[**/out/**]
indent_style = unset
